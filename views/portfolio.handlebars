<script>

    function switchVisible() {
        games = document.getElementById('Games');
        projects = document.getElementById('Projects');
        main = document.getElementById('Main');

        if(document.getElementById('game-btn').checked) {
            games.style.display = 'block';
            projects.style.display = 'none' 
            main.replaceWith(games);
        }
        if(document.getElementById('project-btn').checked) {
            projects.style.display = 'block'; 
            games.style.display = 'none' 
            main.replaceWith(projects);
        }
        // document.getElementById('Games').style.visibility = document.getElementById('game-btn').checked ? 'visible' : 'hidden';
        // document.getElementById('Projects').style.visibility = document.getElementById('project-btn').checked ? 'visible' : 'hidden';
    }
   
</script>
<div class="container">

    <form onchange="switchVisible()" class="flex home">
          <input type="radio" id="game-btn" name="project_type" value="GAME" checked="checked">
          <label for="game">Games</label><br>
          <input type="radio" id="project-btn" name="project_type" value="PROJECT">
          <label for="project-btn">Projects</label><br>
    </form>

    <div id='Main'>

    </div>

    <div id="Games">
        <h3 class="flex">Games</h3>
        <section class="flex project-list">
            <ul class="grid list flex">
                {{#each games}}
                <li>
                    <figure class="hover">
                        {{#if this.images.[Cover.png]}}
                            <img src="/{{this.permalink}}/img/Cover.png" alt="{{this.title}}" width="300" height="300">
                        {{else}}
                            <img src="/img/placeholder.png" alt="placeholder" width="300" height="300">
                        {{/if}}
                        <figcaption>
                            <h2>{{this.title}}</h2>
                        </figcaption>
                        <a href="/{{this.permalink}}"></a>
                    </figure>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>

    <div id="Projects" style="display: none">
        <h3 class="flex">Projects</h3>
        <section class="flex project-list">
            <ul class="grid list flex">
                {{#each projects}}
                <li>
                    <figure class="hover">
                        {{#if this.images.[Cover.png]}}
                            <img src="/{{this.permalink}}/img/Cover.png" alt="{{this.title}}" width="300" height="300">
                        {{else}}
                            <img src="/img/placeholder.png" alt="placeholder" width="300" height="300">
                        {{/if}}
                        <figcaption>
                            <h2>{{this.title}}</h2>
                        </figcaption>
                        <a href="/{{this.permalink}}"></a>
                    </figure>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
</div>
