{{#if webGLPath}}
<link rel="shortcut icon" href="UnityTemplate/favicon.ico">
<link rel="stylesheet" href="UnityTemplate/style.css">
<script src="UnityTemplate/UnityProgress.js"></script>
<script src="{{webGLPath}}UnityLoader.js"></script>
<!--for contactention-->
<div id=buildPath>{{webGLPath}}WebGL.json</div>
<script>
    var unityInstance;
    var fullscreenBtn = document.getElementById("fullscreen");
    //get and remove helper div
    const buildPath = document.getElementById('buildPath').textContent;
    document.getElementById('buildPath').remove()
    function startGame() {
        unityInstance = UnityLoader.instantiate("unityContainer", buildPath, {onProgress: UnityProgress});
        var webgl = document.getElementById('webgl');
        document.getElementById('PlayButton').remove()
    }
</script>
{{/if}}


<div class="container">
    <h2 class="header">{{project.title}}</h2>
    <section>
        <ul class="list-vert flex container">
            {{#if project.team}}
            <li>
                <label>Team:</label>
                <p>{{project.team}}</p>
            </li>
            {{/if}}
            {{#if project.role}}
            <li>
                <label>Role:</label>
                <p>{{project.role}}</p>
            </li>
            {{/if}}
            {{#if project.summary}}
            <li>
                <label>Summary:</label>
                <p>{{project.summary}}</p>
            </li>
            {{/if}}
            {{#if project.contributed}}
            <li>
                <label>What I Contributed:</label>
                <p>{{project.contributed}}</p>
            </li>
            {{/if}}
            {{#if project.challenges}}
            <li>
                <label>Challenges I faced:</label>
                <p>{{project.challenges}}</p>
            </li>
            {{/if}}
            {{#if project.learned}}
            <li>
                <label>What I learned</label>
                <p>{{project.learned}}</p>
            </li>
            {{/if}}
        </ul>
    </section>

    <!--Game-->
    {{#if webGLPath}}
    <button class="flex container" type="button" id="PlayButton" onclick="startGame()">Play!</button>
    <section id="webgl" class="flex container">
        <div class="webgl-content">
            <div id="unityContainer" style="width: 960px; height: 600px"></div>
            <div class="footer">
                <div class="webgl-logo"></div>
                <div id="fullscreen" style="" class="fullscreen" onclick="unityInstance.SetFullscreen(1)"></div>
                <div class="title">{{project.title}}</div>
            </div>
        </div>
    </section>
    {{/if}}
    <!--Downloads-->
    {{#if hasDownloads}}
    <section class="container">
        <h3 class="flex header">Downloads</h3>
        <ul class="list flex">
            {{#if windowsPath}}
            <li>
                <a href="{{windowsPath}}{{project.title}}.zip" download>
                    <img width="32px" height="32px" src="/img/icons/windows.svg" alt="Windows" >
                </a>
            </li>
            {{/if}}   
        </ul>
    </section>
    {{/if}}
    
    <!--external icon links-->
    <section >
        <ul class="list flex">
            {{#if project.itch}}
            <li>
                <a href={{project.itch}} target="_blank">
                    <img width="32px" height="32px" src="/img/icons/itchio.png" alt="Itch.io" >
                </a>
            </li>
            {{/if}}
            {{#if project.github}}
            <li>
                <a href={{project.github}} target="_blank">
                    <img width="32px" height="32px" src="/img/icons/github.png" alt="Github" >
                </a>
            </li>
            {{/if}}
            {{#if project.ludumDare}}
            <li>
                <a href={{project.ludumDare}} target="_blank">
                    <img width="32px" height="32px" src="/img/icons/ludumDare.png" alt="LinkedIn" >
                </a>
            </li>  
            {{/if}}       
        </ul>
    </section>
</div>